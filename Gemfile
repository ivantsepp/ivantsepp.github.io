source 'https://rubygems.org'
# A simple, blog aware, static site generator. (https://github.com/jekyll/jekyll)
gem 'jekyll'
# Rake is a Make-like program implemented in Ruby (https://github.com/jimweirich/rake)
gem 'rake', '~> 10.3'
# Nokogiri (é‹¸) is an HTML, XML, SAX, and Reader parser (http://nokogiri.org)
gem 'nokogiri', '~> 1.6'
# Use GitHub's HTML::Pipeline, in Jekyll!
gem 'jekyll-html-pipeline'
# Mostly autolinking (http://github.com/vmg/rinku)
gem 'rinku'
# Emoji Assets (https://github.com/github/gemoji)
gem 'gemoji'
# The Markdown parser for GitHub.com (http://github.github.com/github-flavored-markdown/)
gem 'github-markdown'
# Seamlessly specify multiple redirection URLs for your pages and posts (https://github.com/jekyll/jekyll-redirect-from)
gem 'jekyll-redirect-from'
# Automatically generate a sitemap.xml for your Jekyll site. (https://github.com/jekyll/jekyll-sitemap)
gem 'jekyll-sitemap'
# Expose Git metadata to Jekyll. (https://github.com/ivantsepp/jekyll-git_metadata)
gem 'jekyll-git_metadata'
# Autolink emails for your Jekyll site. (https://github.com/ivantsepp/jekyll-autolink_email)
gem 'jekyll-autolink_email'
# A set of tests to validate your HTML output. These tests check if your image references are legitimate, if they have alt tags, if your internal links are working, and so on. It's intended to be an all-in-one checker for your documentation output. (https://github.com/gjtorikian/html-proofer)
gem 'html-proofer'
# pygments wrapper for ruby (https://github.com/tmm1/pygments.rb)
gem "pygments.rb"
